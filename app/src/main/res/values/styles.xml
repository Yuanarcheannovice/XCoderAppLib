<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 默认 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/app_gray_light_color</item>
        <item name="colorPrimaryDark">@color/app_gray_light_color</item>
        <item name="colorAccent">@color/app_main_color</item>
        <item name="android:textColor">@color/app_txt_black</item>

    </style>


    <style name="AppTheme.Blue">-->
        <!--蓝色 -->
        <item name="colorPrimary">@color/app_main_color</item>
        <item name="colorPrimaryDark">@color/app_main_color</item>
        <item name="colorAccent">@color/app_main_color</item>
    </style>

    <style name="AppTheme.Black">-->
        <!-- 黑色 -->
        <item name="colorPrimary">@color/app_black_color</item>
        <item name="colorPrimaryDark">@color/app_black_color</item>
        <item name="colorAccent">@color/app_main_color</item>

    </style>


    <style name="ActionButtonStyle" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/app_main_color</item>
    </style>


    <!--MD默认样式  begin-->
    <!--  app加载框的style-->
    <style name="AppProgressDialogStyle" parent="AppTheme">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">@color/app_main_color</item>
    </style>


    <!--@android:style/Theme.DeviceDefault.Light.Dialog-->
    <style name="AppProgressDialog" parent="Theme.AppCompat.Dialog.Alert">
        <!--文字大小-->
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>

        <!-- 这里是修改顶部标题背景颜色，具体颜色自己定，可以是图片 -->
        <item name="android:topDark">@android:color/white</item>
        <!--修改底部背景颜色-->
        <item name="android:bottomDark">@android:color/white</item>
        <!-- 这里是修改内容区域背景颜色 -->
        <item name="android:centerDark">@android:color/white</item>
        <!--//窗口半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <!--设置progressbar的颜色-->
        <item name="android:indeterminateTint" tools:ignore="NewApi">@color/colorAccent</item>
        <item name="android:indeterminateTintMode" tools:ignore="NewApi">src_atop</item>
    </style>


</resources>